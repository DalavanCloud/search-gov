!!!strict
%html{html_attrs('en-us')}
  %head
    %title USASearch Admin
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}/
    = stylesheet_link_tag 'compiled/main.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = javascript_include_tag :defaults, "builder", "scriptaculous", "fckeditor/fckeditor"
    = active_scaffold_includes

  %body
    .container
      .span-13
        = link_to(image_tag('USAsearch_medium_en.gif', :alt=>"USAsearch Home", :width => 201, :height => 44), home_page_path)
        %h1.alt Admin
      .span-11.last.header
        = basic_header_navigation_for current_user
      .span-24.main
        %hr
        .span-6.prepend-9.append-9= show_flash_messages
        = yield
