!!!strict
%html{html_attrs('en-us')}
  %head
    %title USASearch Admin
    = favicon_link_tag
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}/
    = stylesheet_link_tag 'compiled/main.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/new_main.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = (javascript_include_tag "jquery/jquery.min.js").html_safe
    = (javascript_include_tag "jquery/jquery-ui.custom.min.js").html_safe
    = (javascript_include_tag "jquery/jquery.dropdownPlain.js").html_safe
    :javascript
      jQuery.noConflict();
    = (javascript_include_tag :defaults, "fckeditor/fckeditor").html_safe
    = (javascript_include_tag "rails-ext.js").html_safe
    /[if IE]
      = (javascript_include_tag "iepngfix_tilebg.js").html_safe
    = active_scaffold_includes.html_safe

  %body
    = render "/shared/program_header"
    .outer-container
      .inner-container
        .container
          .span-24.main
            - if @page_title.nil? and active_scaffold_config.nil?
              = breadcrumbs([link_to('Search.USA.gov', searchusagov_path), "Admin Center"])
            - else
              = breadcrumbs([link_to('Search.USA.gov', searchusagov_path), link_to("Admin Center", admin_home_page_path), @page_title || active_scaffold_config.label])
            .span-8.prepend-8.append-8= show_flash_messages
            .clear
            = yield
