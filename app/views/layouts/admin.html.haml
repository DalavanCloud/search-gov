!!!strict
%html{html_attrs('en-us')}
  %head
    %title USASearch Admin
    = favicon_link_tag
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}/
    = stylesheet_link_tag 'compiled/main.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = javascript_include_tag "jquery/jquery-1.4.2.min.js"
    = javascript_include_tag "jquery/jquery-ui-1.8.5.custom.min.js"
    :javascript
      jQuery.noConflict();
    = javascript_include_tag :defaults, "fckeditor/fckeditor"
    = active_scaffold_includes

  %body
    = render "/shared/program_header"
    = render "/shared/program_nav"
    .container
      .span-24.main
        - if @page_title.nil? and active_scaffold_config.nil?
          = breadcrumbs([link_to("Affiliate Program", affiliates_path), "Admin Center"])
        - else
          = breadcrumbs([link_to("Affiliate Program", affiliates_path),link_to("Admin Center", admin_home_page_path), @page_title || active_scaffold_config.label])
        .span-6.prepend-9.append-9= show_flash_messages
        = yield
