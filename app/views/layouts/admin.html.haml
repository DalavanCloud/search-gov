!!!strict
%html{html_attrs('en-us')}
  %head
    %title USASearch Admin
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}/
    = stylesheet_link_tag 'compiled/analytics.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = javascript_include_tag :defaults
    = active_scaffold_includes

  %body
    .container
      .span-13
        = link_to(image_tag('USAsearch_medium_en.gif', :alt=>"USAsearch Home", :width => 201, :height => 44), home_page_path)
        %h1.alt Admin
      .span-11.last.header
        = link_to "USAsearch.gov", home_page_path
        |
        = link_to "Analytics", analytics_home_page_path
      .span-24.main
        %hr
        /= show_flash_messages
        = yield
