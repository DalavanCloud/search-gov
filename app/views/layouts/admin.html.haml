!!!strict
%html{html_attrs('en-us')}
  %head
    %title USASearch Admin
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}/
    = stylesheet_link_tag 'compiled/main.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = javascript_include_tag "jquery/jquery-1.4.2.min.js"
    = javascript_include_tag "jquery/jquery-ui-1.8.5.custom.min.js"
    :javascript
      jQuery.noConflict();
    = javascript_include_tag :defaults, "fckeditor/fckeditor"
    = active_scaffold_includes

  %body
    .container
      .span-8
        = link_to(image_tag('USAsearch_medium_en.gif', :alt=>"USAsearch Home", :width => 201, :height => 44), admin_home_page_path)
      .right
        = basic_header_navigation_for current_user
    .secondary-navbar
      .sec-nav-left
        = render "/shared/affiliate_nav"
    .container
      .span-24.main
        = breadcrumbs([link_to('USASearch', program_path), link_to("Affiliate Program", affiliates_path), "Admin Center"])
        .span-6.prepend-9.append-9= show_flash_messages
        = yield
