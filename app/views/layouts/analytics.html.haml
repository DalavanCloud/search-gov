!!!strict
%html{html_attrs('en-us')}
  %head
    %title USASearch Analytics
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}/
    = stylesheet_link_tag 'compiled/main.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = javascript_include_tag :defaults
    = javascript_include_tag "jquery/jquery-1.4.2.min.js"
    = javascript_include_tag "jquery/jquery.qtip.min.js"
    = javascript_include_tag "jquery/jquery-ui-1.8.5.custom.min.js"
    :javascript
      jQuery.noConflict();
    = javascript_include_tag "tooltip_analytics.js"
    = javascript_include_tag :defaults
    = javascript_include_tag "application.js"
    = javascript_include_tag "affiliates.js"
    = active_scaffold_includes
    = setup_google_visualizations
    = calendar_date_select_includes
  %body
    .container
      .span-8
        = link_to(image_tag('USAsearch_medium_en.gif', :alt=>"USAsearch Home", :width => 201, :height => 44), analytics_home_page_path)
      .span-16.last.header
        = analytics_header_navigation_for current_user
    .secondary-navbar
      .sec-nav-left
        = render "/shared/affiliate_nav"
      .sec-nav-right
        &nbsp;
    .container  
      = yield
