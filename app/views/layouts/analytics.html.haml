!!!strict
%html{html_attrs('en-us')}
  %head
    %title USASearch Analytics
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}/
    = stylesheet_link_tag 'compiled/main.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = javascript_include_tag :defaults
    = active_scaffold_includes
    = setup_google_visualizations
    = calendar_date_select_includes

  %body
    .container
      .span-11
        = link_to(image_tag('USAsearch_medium_en.gif', :alt=>"USAsearch Home", :width => 201, :height => 44), analytics_home_page_path)
        %h1.alt= link_to("Analytics",analytics_home_page_path)
      .span-13.last.header= analytics_header_navigation_for current_user
      %hr
      = yield
