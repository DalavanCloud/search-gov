!!!strict
%html{html_attrs('en-us')}
  %head
    %title USASearch Analytics
    = favicon_link_tag
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}/
    = stylesheet_link_tag 'compiled/main.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/new_main.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = (javascript_include_tag "jquery/jquery-1.4.2.min.js").html_safe
    = (javascript_include_tag "jquery/jquery.qtip.min.js").html_safe
    = (javascript_include_tag "jquery/jquery-ui-1.8.5.custom.min.js").html_safe
    = (javascript_include_tag "jquery/jquery.dropdownPlain.js").html_safe
    :javascript
      jQuery.noConflict();
    = (javascript_include_tag "tooltip_analytics.js").html_safe
    = (javascript_include_tag :defaults).html_safe
    /[if IE]
      = (javascript_include_tag "iepngfix_tilebg.js").html_safe
    = (javascript_include_tag "affiliates.js").html_safe
    = active_scaffold_includes.html_safe
    = setup_google_visualizations.html_safe
    = calendar_date_select_includes.html_safe
  %body
    = render "/shared/program_header"
    .outer-container
      .inner-container
        .container  
          .span-24.main
            = yield
