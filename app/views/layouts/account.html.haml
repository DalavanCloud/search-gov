!!!strict
%html{html_attrs('en-us')}
  %head
    %title USASearch
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}/
    = stylesheet_link_tag 'compiled/main.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    = stylesheet_link_tag 'jquery-ui/jquery-ui-1.8.5.custom.css'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = javascript_include_tag "jquery/jquery-1.4.2.min.js"
    = javascript_include_tag "jquery/jquery-ui-1.8.5.custom.min.js"
    :javascript
      jQuery.noConflict();
    = javascript_include_tag :defaults
    = javascript_include_tag "application.js"
    = javascript_include_tag "affiliates.js"
    = calendar_date_select_includes
  %body
    .container
      .span-8
        = link_to(image_tag('USAsearch_medium_en.gif', :alt=>"USAsearch Home", :width => 201, :height => 44), home_page_path)
      .span-16.last.header
        = basic_header_navigation_for current_user
      .span-24.main
        %hr
        .span-4.left
          - if @current_user && @current_user.is_affiliate?
            - if @current_user.affiliates.empty?
              %p.alt You currently have no affiliates.
              %p= link_to "Add Affiliate", new_affiliate_path
            - else
              .contentcard.select-affiliate
                %h2 Selected Affiliate
                = select("affiliate", "id", @current_user.affiliates.all.collect {|p| [ p.name, p.id ] }, {:prompt => 'Select affiliate'}, :class =>"affiliate-dropdown")
              - if @affiliate && @affiliate.id.present?
                #affiliate-nav
                  = link_to "Boosted sites", new_affiliate_boosted_sites_upload_path(@affiliate)
                  %br
                  = link_to "Get Code", embed_code_affiliate_path(@affiliate)
                  %br
                  = link_to "Analytics", affiliate_analytics_home_page_path(@affiliate)
                  %br
                  = link_to "Usage Stats", affiliate_analytics_monthly_reports_path(@affiliate)
                  %br
                  = link_to "Add to Bing", superfresh_urls_affiliate_path(@affiliate)
                      
        .span-16.append-3= show_flash_messages
        .span-19.left
          = yield
