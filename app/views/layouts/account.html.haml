!!!strict
%html{html_attrs('en-us')}
  %head
    %title 
      = @title 
      USASearch
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}/
    %meta{:name=>"description", :content=>'The USASearch Affiliate Program provides free hosted search services for any federal, state, local, tribal, or territorial government agency.'}
    %meta{:name=>'keywords', :content=>'Affiliate Program, Firstgov search, first gov search, USASearch, USA Search, USAGovSearch, USA gov search, USAGovSearch, USA gov search, hosted search, government images, government recalls, government web, government websites, USA, US, United States, US Government, u.s. government, federal, state, local, tribal, territorial, territories'}
    = stylesheet_link_tag 'compiled/main.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    = stylesheet_link_tag 'jquery-ui/jquery-ui-1.8.5.custom.css'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = javascript_include_tag "jquery/jquery-1.4.2.min.js"
    = javascript_include_tag "jquery/jquery-ui-1.8.5.custom.min.js"
    :javascript
      jQuery.noConflict();
    = javascript_include_tag :defaults
    = javascript_include_tag "application.js"
    = javascript_include_tag "affiliates.js"
    = calendar_date_select_includes
  %body
    .container
      .span-8
        = link_to(image_tag('USAsearch_medium_en.gif', :alt=>"USAsearch Home", :width => 201, :height => 44), home_page_path)
      .span-16.last.header
        = basic_header_navigation_for current_user
    .secondary-navbar
      .sec-nav-left
        Affiliate Center: 
        = secondary_header_navigation_for current_user
      .sec-nav-right
        - if @current_user && @current_user.is_affiliate?
          - if !@current_user.affiliates.empty?
            Selected Affiliate 
            = select("affiliate", "id", @current_user.affiliates.all.collect {|p| [ p.name, p.id ] }, {:prompt => 'Select affiliate'}, :class =>"affiliate-dropdown")
    .container
      .main
        .affiliate-nav
          - if @current_user && @current_user.is_affiliate?
            - if @current_user.affiliates.empty?
              %p= link_to "Add New Affiliate", new_affiliate_path
            - else
              - if @affiliate && @affiliate.id.present?
                .header-box
                  = link_to(@affiliate.name, affiliate_path(@affiliate))
                %table.admin-table.nav-links
                  %tr
                    %td
                      %strong Settings
                      %br
                      = link_to "Boosted sites", new_affiliate_boosted_sites_upload_path(@affiliate)
                      %br
                      = link_to "Get Code", embed_code_affiliate_path(@affiliate)
                      %br
                      = link_to "Add to Bing", affiliate_superfresh_urls_path(@affiliate)
                      .super new
                      = link_to "SAYT Suggestions", sayt_suggestions_affiliate_path(@affiliate)
                      .super new
                  %tr
                    %td
                      %strong Analytics
                      %br
                      = link_to "Query Logs", affiliate_analytics_home_page_path(@affiliate)
                      %br
                      = link_to "Monthly Reports", affiliate_analytics_monthly_reports_path(@affiliate)
                  %tr
                    %td
                      = link_to "Manage Users", affiliate_users_path(@affiliate)
        
        .admin-content
          .span-18.append-3= show_flash_messages
          .clear
          = yield
        
      .clear
      %br
      .admin-footer
        USASearch Program, General Services Administration
        %br
        One Constitution Square, 1275 First Street NE, 11th Floor, Washington, DC 20417
        %p
        Email us at: searchusa@gsa.gov
          
