!!! XML
!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en"}
  %head
    - if @affiliate
      = stylesheet_link_tag 'compiled/advanced.css'
      = stylesheet_link_tag "compiled/affiliates/#{@affiliate.template.stylesheet}"
      /[if lt IE 8]
        = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
      = stylesheet_link_tag "clearfix"
      - if @affiliate.is_sayt_enabled
        = stylesheet_link_tag 'jquery-ui/jquery-ui-1.8.5.custom.css'
        = stylesheet_link_tag 'compiled/sayt.css'
        - if @affiliate.is_affiliate_suggestions_enabled
          = javascript_tag "var usagov_sayt_url = \"#{root_url}sayt?aid=#{@affiliate.id}&\";"
        - else
          = javascript_tag "var usagov_sayt_url = \"#{root_url}sayt?\";"
        = javascript_include_tag "jquery/jquery-1.4.2.min.js"
        = javascript_include_tag "jquery/jquery-ui-1.8.5.custom.min.js"
        = javascript_include_tag "jquery/jquery.bgiframe.min.js"
        = javascript_include_tag "sayt-ui.js"
    = javascript_include_tag "application.js"

    %title= h @page_title
  %body
    #container
      #header= @affiliate.header if @affiliate
      #search.clearfix
        %h1 Search
        = yield
      #footer= @affiliate.footer if @affiliate
  = render "/shared/webtrends_affiliates"
