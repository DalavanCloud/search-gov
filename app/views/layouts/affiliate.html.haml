!!! XML
!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en"}
  %head
    = favicon_link_tag
    = render_no_index_meta_tag
    = (javascript_include_tag "jquery/jquery-1.4.2.min.js").html_safe
    = stylesheet_link_tag 'compiled/advanced.css'
    = stylesheet_link_tag "compiled/affiliates/#{@affiliate.affiliate_template.stylesheet}"
    /[if lt IE 8]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = stylesheet_link_tag "clearfix"
    - if @affiliate.is_sayt_enabled
      = stylesheet_link_tag 'jquery-ui/jquery-ui-1.8.5.custom.css'
      = stylesheet_link_tag 'compiled/sayt.css'
      - if @affiliate.is_affiliate_suggestions_enabled
        = javascript_tag "var usagov_sayt_url = \"#{sayt_url}&aid=#{@affiliate.id}&\";"
      - else
        = javascript_tag "var usagov_sayt_url = \"#{sayt_url}&\";"
      = (javascript_include_tag "sayt-ui.js").html_safe
      = (javascript_include_tag "jquery/jquery-ui-1.8.12.custom.min.js").html_safe
      = (javascript_include_tag "jquery/jquery.bgiframe.min.js").html_safe
    = (javascript_include_tag "application.js").html_safe

    %title= h @page_title
  %body{ :class => @affiliate.affiliate_template.stylesheet }
    #container
      #header= @affiliate.header if @affiliate
      #search.clearfix
        %h1 Search
        = yield
      #footer= @affiliate.footer if @affiliate
  = render "/shared/webtrends_affiliates"
