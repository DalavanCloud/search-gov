!!!strict
%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => I18n.locale, :lang => I18n.locale }
  %head
    = attribution
    %title= build_page_title(@page_title)
    = favicon_link_tag "/favicon_#{I18n.locale}.ico"
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}/
    = render_robots_meta_tag
    = yield :head
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/base.css'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    = stylesheet_link_tag 'compiled/advanced.css'
    = stylesheet_link_tag 'jquery-ui/jquery-ui.custom.css'
    = stylesheet_link_tag 'compiled/sayt.css'
    /[if lt IE 8]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    /[if IE 8]
      = stylesheet_link_tag 'compiled/ie8.css', :media => 'screen, projection'
    = javascript_tag "var usagov_sayt_url = \"#{sayt_url}&\";"
    = (javascript_include_tag "jquery/jquery.min.js").html_safe
    = (javascript_include_tag "jquery/jquery-ui.custom.min.js").html_safe
    = (javascript_include_tag "sayt-ui.js").html_safe
    = (javascript_include_tag "application.js").html_safe
    /[if IE]
      = (javascript_include_tag "iepngfix_tilebg.js").html_safe

  %body{ :class => I18n.locale }
    #skiplink
      %a{:href => "#content"} Skip to Main Content
    .container
      .span-24.header-wrap
        .header
          #headerlinks
            = header_links
      .span-24.main-wrap
        .main
          #main_nav_wrap
            #main_nav
              #other_search_page= link_to(image_tag("search_usa_gov_red_#{other_locale_str}_button.gif", :alt => (t :red_button_alt_value)), home_page_path(:locale => other_locale_str))
              #change_text_size= link_to((t :change_text_size), (t :change_text_size_url))
              #navlinks
                %span.gov
                  = t(:government)
                  &nbsp; &gt;
                - search_params = {:query => params[:query], :locale => params[:locale]}
                = link_to_unless web_search?, content_tag(:span, 'Web'), path_to_search(search_params, home_page_path(search_params), search_path(search_params))
                = link_to_unless image_search?, content_tag(:span, t(:images)), path_to_search(search_params, images_path(search_params), image_search_path(search_params))
                - if english_locale?
                  = link_to_unless recalls_search?, content_tag(:span, t(:recalls)), recalls_search_path(search_params)
                  = link_to_unless forms_search?, content_tag(:span, t(:forms)), forms_search_path(search_params)
          = yield
        .footer-wrap
          .center-wrapper
            = render_connect_section
            .footer
              = footer_links
            = render_about_usasearch
            .tagline
              &= t(:site_tagline)
      .span-24.bottom-wrap
        .bottom &nbsp;
    = render_webtrends_code
    = @rails_server_location_in_html_comment_for_opsview.html_safe
