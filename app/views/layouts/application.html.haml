!!!strict
%html{ lang: 'en-US' }
  %head
    %meta{ charset: 'UTF-8' }
    = csrf_meta_tags
    %title
      = yield :title
    = favicon_link_tag

    = stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Maven+Pro:400,700'
    = stylesheet_link_tag 'application'
    /[if lt IE 9]
      = stylesheet_link_tag 'application_ie_lt9'

  %body
    %a#skiplink{ href: '#main-content' } Skip to Main Content
    #navbar.navbar
      .navbar-inner
        .container
          = render partial: 'shared/brand'
          = yield :navigation
    .l-main-container
      #main-content.l-content.l-content-without-site
        = yield
    = javascript_include_tag 'application'
    /[if lt IE 9]
      = javascript_include_tag 'application_ie_lt9'
