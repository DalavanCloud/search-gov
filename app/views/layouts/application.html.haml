!!!strict
%html{html_attrs('en-us')}
  %head
    %title USASearch
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}/
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/base.css'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    /= javascript_include_tag :defaults

  %body
    .container
      .span-13
        = link_to(image_tag('USASearch_large.gif', :alt=>"USASearch Home", :width => 147, :height => 42), home_page_path)
      .span-11.last.header
        = link_to "USA.gov", "http://usa.gov"
        |
        = link_to "GobiernoUSA.gov", "http://GobiernoUSA.gov"
      %hr
      /= show_flash_messages
      = yield
