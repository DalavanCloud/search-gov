!!!strict
%html
  %head
    %title= t :site_title
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}/
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/base.css'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = javascript_include_tag :defaults
  %body{:style=>"background-color: #{locale_dependent_background_color}"}
    .container
      .span-24.header
        = header_links
      .prepend-1.span-22.append-1.main.docs
        .span-4.append-3{:style => "margin: 0 -8px 0 8px;"}
          = link_to(image_tag( "USAsearch_medium_#{I18n.locale}.gif" , :alt=>"USASearch Home"), home_page_path(:locale => I18n.locale, :m => params[:m] || "false"))
        .span-16.last
          = yield
      .prepend-1.span-22.append-1.footer
        = footer_links
    = render_webtrends_code
