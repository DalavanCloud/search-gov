!!!strict
%html
  %head
    %title= t :site_title
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}/
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/base.css'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = javascript_include_tag :defaults
    %style{:type => "text/css", :media => "screen"}
      :plain
        .main {
          font-size:1.2em;
        }
        h1, h2 {
          font-family: Georgia, "Times New Roman", serif;
        }
        h1 {
          font-size: 2.0em;
        }
        h2 {
          font-size: 1.5em;
        }
        .main p + p {
          margin-top: 1.0em;
          text-indent: 0;
        }
        table, td {
          border: solid 1px lightgray;
        }
        table {
          margin: 1em 0 0 0;
          border-spacing: 0;
          border-collapse: collapse;
        }
        td {
          margin: 0;
          border: solid 1px lightgray;
        }

  %body{:style=>"background-color: #{locale_dependent_background_color}"}
    .container
      .span-24.header
        = header_links
      .prepend-1.span-22.append-1.main
        .span-4.append-3{:style => "margin: 0 -8px 0 8px;"}
          = link_to(image_tag( "USAsearch_medium_#{I18n.locale}.gif" , :alt=>"USASearch Home"), home_page_path(:locale => I18n.locale))
        .span-16.last
          = yield
      .prepend-1.span-22.append-1.footer
        = footer_links
    = render_webtrends_code