!!!strict
%html{ lang: @search.affiliate.locale }
  %head
    %meta{ charset: 'UTF-8' }
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1.0' }
    %meta{ 'http-equiv' => 'X-UA-Compatible', :content => 'IE=edge' }
    = render_robots_meta_tag
    = attribution
    != "<!-- aid: #{@search.affiliate.id} handle: #{@search.affiliate.name} -->"
    = favicon_link_tag @search.affiliate.favicon_url.blank? ? '/favicon_affiliate.ico' : @search.affiliate.favicon_url

    %title #{@page_title}

    = font_stylesheet_link_tag @search.affiliate
    = stylesheet_link_tag 'searches_mobile'
    /[if IE]
      = stylesheet_link_tag 'searches_mobile_ie'
    :css
      #{@search.affiliate.mobile_look_and_feel_css}
    /[if lt IE 9]
      = javascript_include_tag 'searches_ie_lt9'

  %body{ body_class_hash(@search.affiliate) }
    %a#skiplink{ href: '#main-content', tabindex: 1 }= t 'searches.skip_to_main_content'
    #header-wrapper
      - navigations = renderable_navigations @search
      - has_menu = has_menu_items? @search, navigations
      #header
        = render partial: 'searches/nav_button' if has_menu
        = mobile_header @search.affiliate
        = main_menu @search, @search_params, navigations if has_menu
        = navigations_and_related_sites(@search, @search_params, navigations)
        = render partial: 'searches/form', locals: { search: @search }

    #main-content{ tabindex: -1 }= yield

    = render partial: 'searches/footer', locals: { affiliate: @search.affiliate } if @search.affiliate.managed_footer_links.present?

    = javascript_include_tag 'searches_mobile'

    = render partial: 'searches/usasearch_serp_analytics'
    = render partial: 'shared/analytics'
    = render partial: '/shared/tracking'
