!!!strict
%html
  %head
    %title 
      USA.gov Mobile 
      = @title
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}/
    = stylesheet_link_tag 'mobile.css'
    - if is_device? 'iphone'
      %meta{:name => "viewport", :content => "width = device-width, initial-scale = 1.0, maximum-scale = 1.0, minimum-scale = 1.0"}
      %meta{:name => "apple-mobile-web-app-capable", :content => "YES"}
      %meta{:name => "format-detection" :content => "telephone=no"}
    - else
      %meta{:name => "MobileOptimized", :content => "175"}
    
    = javascript_tag "var usagov_sayt_url = \"#{root_url}sayt\";"
    = javascript_include_tag "jquery/jquery-1.4.2.min.js"
    = javascript_include_tag "jquery/jquery-ui-1.8.5.custom.min.js"
    = javascript_include_tag "jquery/jquery.bgiframe.min.js"
    = javascript_include_tag "sayt.js"
    = javascript_include_tag "application.js"
    = javascript_include_tag "/m/j/close.js"
    
  %body{:onload => "setTimeout(function() { window.scrollTo(0, 1) }, 100);"}
  #container
    #contentWrapper
      = yield
    

