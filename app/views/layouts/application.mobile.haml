!!!strict
%html
  %head
    %title
      = t(:usagov_mobile)
    = favicon_link_tag "/favicon_#{I18n.locale}.ico"
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}/
    = render_no_index_meta_tag
    = stylesheet_link_tag 'mobile.css'
    - if is_device? 'iphone'
      %meta{:name => "viewport", :content => "width = device-width, initial-scale = 1.0, maximum-scale = 1.0, minimum-scale = 1.0"}
      %meta{:name => "apple-mobile-web-app-capable", :content => "YES"}
      %meta{:name => "format-detection", :content => "telephone=no"}
    - else
      %meta{:name => "MobileOptimized", :content => "175"}

    = javascript_tag "var usagov_sayt_url = \"#{sayt_url}&\";"
    = (javascript_include_tag "jquery/jquery.min.js").html_safe
    = (javascript_include_tag "jquery/jquery-ui.custom.min.js").html_safe
    = (javascript_include_tag "jquery/jquery.bgiframe.min.js").html_safe
    = (javascript_include_tag "sayt-ui.js").html_safe
    = (javascript_include_tag "application.js").html_safe
    = (javascript_include_tag "/m/j/close.js").html_safe

  %body{:onload => "setTimeout(function() { window.scrollTo(0, 1) }, 100);", :class => 'mobile-web'}
    #container
      #contentWrapper
        = yield
    = render_mobile_webtrends_code


