!!!strict
%html
  %head
    %title= t :site_title
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}/
    = stylesheet_link_tag 'compiled/main.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    = stylesheet_link_tag 'compiled/sayt.css'
    = stylesheet_link_tag 'jquery-ui/jquery-ui-1.8.5.custom.css'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = javascript_tag "var usagov_sayt_url = \"#{root_url}sayt?\";"
    = javascript_include_tag "jquery/jquery-1.4.2.min.js"
    = javascript_include_tag "jquery/jquery-ui-1.8.5.custom.min.js"
    = javascript_include_tag "jquery/jquery.bgiframe.min.js"
    = javascript_include_tag "sayt-ui.js"
    = javascript_include_tag "application.js"
    = javascript_include_tag "affiliates.js"
  %body
    .container
      .span-12
        = link_to(image_tag('USAsearch_medium_en.gif', :alt=>"USAsearch Home", :style=>"vertical-align:middle;"), home_page_path) 
        = link_to(image_tag('USAsearchProgram_medium_en.png', :alt=>"USAsearch Home", :style=>"vertical-align:middle", :id => "program_logo"), program_path)
      .right
        = basic_header_navigation_for current_user
    .secondary-navbar
      .sec-nav-left
        = render "/shared/program_nav"
    .container
      .main    
        .admin-content
          .span-18.append-3= show_flash_messages
          .clear
          = yield
      %br
      = render "/shared/affiliate_footer"
    = render_webtrends_code
