!!!strict
%html
  %head
    %title= t :site_title
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}/
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/base.css'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = javascript_include_tag :defaults
  %body
    .container
    .span-24.header-wrap
      .header
        = header_links
    .span-24.main-wrap
      .main.docs
        .span-4.append-3.logo-left{:style => "margin: 0 -50px 0 50px;"}
          = link_to(image_tag( "USAsearch_medium_#{I18n.locale}.gif" , :alt=>"USASearch Home"), home_page_path(:locale => I18n.locale, :m => params[:m] || "false"))
        .span-16.last
          = yield
    .span-24.footer-wrap
      .footer
        = footer_links
    = render_webtrends_code
