!!!strict
%html
  %head
    %title= "#{@page_title} - USASearch"
    = favicon_link_tag
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}/
    = stylesheet_link_tag 'compiled/main.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/new_main.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    = stylesheet_link_tag 'compiled/sayt.css'
    = stylesheet_link_tag 'jquery-ui/jquery-ui-1.8.5.custom.css'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = javascript_tag "var usagov_sayt_url = \"#{root_url}sayt?\";"
    = javascript_include_tag "jquery/jquery-1.4.2.min.js"
    = javascript_include_tag "jquery/jquery-ui-1.8.5.custom.min.js"
    = javascript_include_tag "jquery/jquery.bgiframe.min.js"
    = javascript_include_tag "jquery/jquery.dropdownPlain.js"
    = javascript_include_tag "sayt-ui.js"
    = javascript_include_tag "application.js"
    /[if IE]
      = javascript_include_tag "iepngfix_tilebg.js"
    = javascript_include_tag "affiliates.js"
  %body
    = render "/shared/program_header"
    .outer-container
      .inner-container
        - display_for(:affiliate) do
          = render "/shared/affiliate_sidebar"
        .content
          .container
            .main    
              .admin-content
                .span-18.append-3= show_flash_messages
                .clear
                = yield
            %br
    = render "/shared/program_footer"
    = render_webtrends_code
