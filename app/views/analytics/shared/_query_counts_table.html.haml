- offset ||= 0
%table.querycounts
  %tr
    %th Query
    %th{:style=>"text-align:center"} #{heading}
    %th{:style=>"text-align:right"} Frequency
  - if query_counts.kind_of?(String)
    %tr
      %td.alt{:colspan=>3}=query_counts
  - else
    - query_counts.each_with_index do |query_count, idx|
      %tr
        %td{:colspan=>2}
          = "#{idx+1+offset}."
          = affiliate.nil? ? query_chart_link(query_count.query, query_count.is_grouped) : query_count.query
        %td{:style => "text-align: right"}= query_count.times

