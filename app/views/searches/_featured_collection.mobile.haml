.content-block-item.result{ featured_collection_class_hash(result), id: "best-bet-#{position}", onclick: 'void(0)' }
  .image-and-title
    = featured_collection_image result
    %h3= link_to_featured_collection_title(result.id, result.title, result.title_url, position)
  %ul{ class: "#{result.layout.gsub(' ', '-')}" }
    - result.featured_collection_links.each do |link|
      %li
        = link_to_featured_collection_title result.id, link.title, link.url, position
