#video-news-items
  .content-block-item.content-block-item-header
    .content-provider
      = raw t :'searches.news_about_query',
          news_label: 'Videos',
          query: content_tag(:span, search.query)
  - unique_news_items(search.video_news_items.results).first(3).each_with_index do |news_item, index|
    = render partial: 'searches/video_news_result',
        locals: { block_id_prefix: 'video-news-item', instance: news_item, position: index + 1 }
  - if search.affiliate.rss_feeds.managed.navigable_only.present?
    .content-block-item.content-block-item-footer
      .see-more
        = link_to path_for_rss_feed_search(search_params, search.affiliate.rss_feeds.managed.first, search.query) do
          = raw t :'searches.more_news_about_query',
              news_label: 'videos',
              query: content_tag(:span, search.query)
