.center-wrapper
  .homepage.recalls
    %a{:name => "content"}
    = link_to(image_tag("USAsearch_large_#{I18n.locale}_recalls.gif" , :alt => "USASearch Recalls Home"), recalls_path(:locale => I18n.locale), :id => 'landing_page_logo')
    = render "shared/search", :path => recalls_search_path

- if @latest_recalls.results.size > 0
  .center-wrapper
    .homepage
      .popular-wrapper.recalls
        #popular
          %h2 Latest Recalls
          #results.recalls
            - @latest_recalls.results[0..4].each_with_index do |result, index|
              = render 'result', :result => result, :index => index, :hit => @latest_recalls.hits[index]
