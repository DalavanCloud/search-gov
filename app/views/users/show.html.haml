.span-12.contentcard
  %h2
    Account Profile
    =link_to "Edit your profile", edit_account_path
  %dl
    %dt Email:
    %dd= h @user.email
    %dt Contact Name:
    %dd= h @user.contact_name
    %dt Time Zone:
    %dd= h @user.time_zone
- if @user.is_affiliate?
  .span-24
    .span-6.contentcard
      %h2 Affiliates
      %table
        - @user.affiliates.each do |affiliate|
          %tr
            %td= h affiliate.name
            %td
              = link_to "Edit", edit_affiliate_path(affiliate)
              |
              = link_to "View sample", search_url(:affiliate=> affiliate.name, :query=>"gov")
