.govbox
  %h3
    = t(:images_for, :query => search.query)
  - search.extra_image_results[0..3].each_with_index do |result, index|
    %span.small_image_result{:id => "searchresult#{index+1}"}
      = thumbnail_image_link(result, 140, 90)
      = thumbnail_link(result)
  %p= "#{link_to t(:view_all_images_for, :query => search.query), image_search_path({:query => params[:query], :locale => params[:locale]})} >"
