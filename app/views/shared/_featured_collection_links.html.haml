%ul
  - if result.has_one_column_layout?
    - result.featured_collection_links.each_with_index do |link, index|
      %li= featured_collection_link_with_click_tracking(link.title, link.url, @affiliate, search.query, index + 1, @search_vertical, result.id)
  - else
    - total_links = result.featured_collection_links.count
    - total_links_on_the_left = (total_links / 2) + (total_links % 2)
    - total_links_on_the_left.times do |i|
      - index = i
      - link = result.featured_collection_links[index]
      %li.left= featured_collection_link_with_click_tracking(link.title, link.url, @affiliate, search.query, index + 1, @search_vertical, result.id)
      - index = i + total_links_on_the_left
      - if index < total_links
        - link = result.featured_collection_links[index]
        %li.right= featured_collection_link_with_click_tracking(link.title, link.url, @affiliate, search.query, index + 1, @search_vertical, result.id)
