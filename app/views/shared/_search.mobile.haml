= form_tag(search_path(:m => "true"), :method => :get, :id=>"search_form", :autocomplete => "off") do
  = hidden_field_tag :m, params[:m]
  = hidden_field_tag :affiliate, @affiliate.name
  = hidden_field_tag(:sitelimit, @search.matching_site_limits) if @search.is_a?(WebSearch) && @search.matching_site_limits.present?
  .dvSearchBox
    = text_field :search, :query, { :maxlength => 255, :name => "query", :autocomplete => "off", :class => "mobileSearchTextBox usagov-search-autocomplete" }
    .dvSearchClose
      = image_tag "/m/i/close.png", :style => "display: none;"
  .dvSearchBtn
    = image_submit_tag "/m/i/btnSearchSkin.png", :id => 'Search'
  .clear

