.group
  .center= link_to(image_tag("/m/i/logo.gif"), :controller => "home")
  - form_tag(search_path, :method => :get, :id=>"search_form") do
    .row
      = unescaped_text_field_with_auto_complete :search, :query, {:name=>"query", :placeholder => "Search", :autocomplete => "off"}, {:url=> {:controller => "searches", :action => "auto_complete_for_search_query"}, :method=> :get, :min_chars => 2, :after_update_element => "function(element,value){ element.parentNode.submit(value) }", :frequency => 0.1 }
      = submit_tag(t :search, :id => "search_button")
    = hidden_field_tag :locale, I18n.locale
    = hidden_field_tag :m, params[:m]
- if js_enabled_mobile_device?
  :javascript
    document.getElementById("search_query").focus();
