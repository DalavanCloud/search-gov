- form_tag(search_path, :method => :get, :id=>"search_form") do
  = hidden_field_tag :locale, I18n.locale
  = hidden_field_tag :m, params[:m]
  .dvSearchBtn
    = image_submit_tag "/m/i/btnSearchSkin.png"
  .dvSearchClose
    = image_tag "/m/i/close.png", :style => "display: none;"
  .dvSearchBox
    = unescaped_text_field_with_auto_complete :search, :query, {:name=>"query", :autocomplete => "off", :class => "mobileSearchTextBox"}, {:url=> {:controller => "searches", :action => "auto_complete_for_search_query"}, :method=> :get, :min_chars => 2, :after_update_element => "function(element,value){ element.parentNode.submit(value) }", :frequency => 0.1 }
  .clear
- if js_enabled_mobile_device?
  :javascript
    document.getElementById("search_query").focus();
