- unless search.indexed_documents.blank?
  #indexed_documents
    .indexed-documents-wrapper-top
    .indexed-documents-wrapper-middle
      .related_indexeddocs
        - search.indexed_documents.each_with_index do |hit, index|
          = render 'shared/indexed_document', :hit => hit, :index => index
      .see-more-documents
        = link_to t(:more_results_for_query, :query => @search.query), docs_search_path(:query => @search.query, :affiliate => @affiliate.name)
    .indexed-documents-wrapper-bottom