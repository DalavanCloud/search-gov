.searchresult.blended{:id => "searchresult#{index+1}"}
  .govbox.agency
    %span.official-tag
      = t :agency_feature_by
    %h2= display_bing_result_title(result, search, affiliate, index, @search_vertical)
    %div
      = display_agency_link(result, search, affiliate, index, @search_vertical)
      = t :agency_official_site
    %p.description
      = display_result_description(result)
    - if affiliate.nil? && index == 0 && search.first_page?
      %div
        = display_deep_links_for(result, search, affiliate, @search_vertical)
    .stay-connected
      %h3
        = t :agency_stay_connected_label
      - if search.agency.has_phone_number?
        .phone-wrapper
          = image_tag 'govbox/phone.gif', :alt => ''
          = display_agency_phone_numbers(search.agency)
      = display_agency_social_media_links(search.agency)
    - unless search.agency.displayable_popular_urls.empty?
      .popular-pages
        %h3
          = t:agency_popular_pages
        = display_agency_popular_links(search.agency.displayable_popular_urls[0..4], search, affiliate, @search_vertical)
    .search-within{:style => "#{search.agency.displayable_popular_urls.empty? ? 'clear: none;' : 'clear: left;'}"}
      %h3
        #{t :agency_search_within_label} #{search.agency.domain}
      = form_tag search_path, :method => :get do
        = hidden_field_tag 'sitelimit', search.agency.domain
        = hidden_field_tag 'locale', I18n.locale.to_s
        = text_field_tag 'query', ''
        = submit_tag t :search
