.recalls-govbox
  %h3<
    = t :recall_govbox_header
    = link_to("#{t(:view_more_recalls)} >", recalls_search_path(:query => search.query), :id =>"view_more_recalls")
  - search.recalls.hits.each do |hit|
    .recall
      = render "recalls/industry_icon", :recall => hit.instance
      .details
        = link_to highlight(truncate_on_words(hit.instance.summary, 90), search.query.split, :highlighter => '<b>\1</b>'), hit.instance.recall_url
        .agency
          = t "industry.#{hit.instance.industry}.agency_name"
        .recall-date
          = l((hit.instance.recalled_on || hit.instance.created_at), :format => :medium)

