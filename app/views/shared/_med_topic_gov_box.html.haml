.searchresult.clearfix{:id => "searchresult#{index+1}"}
  .govbox
    %h3{:style => 'float: right;'}
      = t :medline_official_result
      = image_tag "medline.#{I18n.locale.to_s}.png"
    %h2
      = display_medline_result_title(search, affiliate, index)
    %h3
      = display_medline_url_with_click_tracking(search.med_topic.medline_url, search.query, index)
    %h3
      :css
        p + p {
          margin-top: 5px;
          text-indent: 0px;
        }
      = display_medline_results_description(search.med_topic.summary_html)
    .govbox-related
      - if search.med_topic.related_topics.size > 0
        %span{:style => 'width: 30%; float: left;'}
          %p{:style => 'color: #C51432;'}
            = t :medline_related_topics
            %ul{:style => 'margin: 0px; padding: 0px;'}
              - search.med_topic.related_topics.each do |related_medline_topic|
                %li{:style => 'list-style-type: none;'}
                  = display_medline_topic_with_click_tracking(related_medline_topic, search.query, index)
      - if search.med_topic.lang_mapped_topic.present?   
        %span
          %p{:style => 'color: #C51432; margin: 0px;'}
            = t :medline_term_for_locale
          %p{:style => 'margin: 0px;'}
            = display_medline_topic_with_click_tracking(search.med_topic.lang_mapped_topic, search.query, index)        
