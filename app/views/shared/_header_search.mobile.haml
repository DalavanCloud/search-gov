= form_tag(search_path(:m => "true"), :method => :get, :id=>"search_form") do
  = hidden_field_tag :m, params[:m]
  = hidden_field_tag :affiliate, @affiliate.name
  = hidden_field_tag :sitelimit, params[:sitelimit] if params[:sitelimit]
  = render :partial => 'shared/search_box'
- if js_enabled_mobile_device?
  :javascript
    document.getElementById("search_query").focus();
