%h3.alt
  = related_topics_header @affiliate, @search.query
%ul{:id => "relatedsearch"}
  - @search.related_search.each_with_index do |related_term, index|
    - options = {:query=>strip_tags(related_term)}
    - options[:affiliate] = @affiliate.name if @affiliate
    - options[:embedded] = @search_options[:embedded] if @search_options and @search_options[:embedded]
    %li= tracked_click_link(search_path(options),related_term.html_safe.downcase, @search, @affiliate, index, 'SREL', @search_vertical)
