= render_govbox(:right) do
  #jobs_govbox
    %h3.alt
      = job_openings_header(search.affiliate.agency)
    - search.jobs.each do |job|
      .job
        .job-title= title_link(job)
        - unless search.affiliate.has_organization_code? && search.affiliate.agency.organization_code.length==4
          .job-organization= job.organization_name
        .job-locations-money= locations_and_salary(job)
        .job-dates= job_application_deadline(job.end_date)

    .more-jobs= agency_jobs_link(search.affiliate.agency)