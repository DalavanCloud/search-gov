- if search.has_news_items?
  = render_govbox do
    #news_items_govbox
      %h3.alt
        = link_to_unless(search.affiliate.rss_feeds.non_managed.navigable_only.empty?, I18n.t(:news_results, :query => search.query, :affiliate => search.affiliate.display_name), news_search_path(:query => search.query, :affiliate => search.affiliate.name))
        %span.recommended-by
          = t :by
          = @affiliate.display_name
      - search.news_items.hits(:verify => true).first(3).each_with_index do |hit, index|
        = render 'shared/govbox_news_item', :hit => hit, :index => index
