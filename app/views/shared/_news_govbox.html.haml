- if search.has_news_items?
  = render_govbox do
    #news_items_govbox
      %h3.alt
        = rss_govbox_title search
        %span.recommended-by
          = t :by
          = @affiliate.display_name
      - unique_news_items(search.news_items.results).first(3).each_with_index do |instance, index|
        = render 'shared/govbox_news_item', :instance => instance, :index => index
