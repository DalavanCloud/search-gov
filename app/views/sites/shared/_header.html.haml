#navbar.navbar
  .navbar-inner
    .container
      = link_to BLOG_URL, class: 'brand' do
        %span.usa USA
        %span.search> Search
      %ul.nav
        %li.site-select-item
          = label_tag :site_select, 'Select a site'
          = site_select
        %li
          = link_to new_site_path do
            %i.icon-plus
            Add Site
      %ul.nav.auth
        %li#nav-auth-menu.dropdown
          = link_to '#nav-auth-menu', { 'data-toggle' => 'dropdown' } do
            = current_user.email
            %i.icon-caret-down
          %ul.dropdown-menu(data-no-turbolink)
            %li
              = link_to '#', tabindex: -1 do
                %i.icon-user
                My account
                %br
                (Coming Soon)
            %li
              = link_to url_for_logout, method: :delete, tabindex: -1 do
                %i.icon-signout
                Sign out
