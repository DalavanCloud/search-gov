.l-site-header
  .l-site-header-inner
    %h1
      Admin Center
    - unless @site.nil? || @site.new_record?
      .site-display-name
        %span.label Display Name:
        #{@site.display_name} (#{@site.name})
        = site_pin @site
        = daily_snapshot_toggle @site.memberships.find_by_user_id(current_user.id)
