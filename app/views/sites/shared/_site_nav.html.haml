.l-site-nav.main
  - unless @site.nil? || @site.new_record?
    %ul.nav
      = main_nav_item 'Dashboard', site_path(@site), 'icon-dashboard', site_dashboard_controllers
      = main_nav_item 'Analytics', new_site_queries_path(@site), 'icon-bar-chart', site_analytics_controllers
      = main_nav_item 'Content', site_content_path(@site), 'icon-file', site_manage_content_controllers
      = main_nav_item 'Display', edit_site_display_path(@site), 'icon-desktop', site_manage_display_controllers
      = main_nav_item 'Preview', site_preview_path(@site), 'icon-eye-open', [], preview_serp_link_options
      = main_nav_item 'Activate', site_embed_code_path(@site), 'icon-code', site_activate_search_controllers
.l-site-nav.sub
  - if @site.nil? || @site.new_record?
    = render('sites/shared/new_site_sub_nav') if controller_name == 'sites'
  - else
    = render('sites/shared/dashboard_sub_nav') if site_dashboard_controllers.include?(controller_name)
    = render('sites/shared/manage_content_sub_nav') if site_manage_content_controllers.include?(controller_name)
    = render('sites/shared/manage_display_sub_nav') if site_manage_display_controllers.include?(controller_name)
    = render('sites/shared/activate_search_sub_nav') if site_activate_search_controllers.include?(controller_name)
    = render('sites/shared/analytics_sub_nav') if site_analytics_controllers.include?(controller_name)
