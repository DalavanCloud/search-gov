= content_for_site_page_title @site, 'Manage Users'
.sub-nav-heading
  %h2 Users
  .action-bar
    = link_to_current_help_page
    = link_to 'Add User', new_site_user_path(@site)

= render_site_flash_message
%table.table.table-no-header
  %tbody
    - @users.each do |user|
      %tr
        %td
          %div #{user.contact_name}
          .muted #{user.email}
        %td
          = button_to 'Remove', site_user_path(@site, user.id), method: :delete, data: { confirm: "Are you sure you wish to remove #{user.email} from this site?" }, class: 'btn pull-right'



