= content_for :title, 'Login'
= content_for :navigation do
  %ul.nav.signup
    %li= link_to 'Sign up', signup_path
.without-site-wrapper
  = form_for @user_session, url: user_session_path, html: { id: 'user-session-form' } do |f|
    = render_flash_message(false)
    = f.error_messages class: 'alert alert-error', header_tag: 'h3'
    = f.label :email
    = f.email_field :email, placeholder: 'Email'
    = f.label :password
    = f.password_field :password, placeholder: 'Password'
    = f.submit 'Login'
  .forgot-password
    = link_to 'Forgot your password?', new_password_reset_path
