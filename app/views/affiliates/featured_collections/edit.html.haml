= affiliate_center_breadcrumbs([link_to(@affiliate.display_name, affiliate_path(@affiliate)), "Edit Best Bets: Graphics entry"])
%h1 Edit Best Bets: Graphics entry
.edit-featured-collection
  = form_for([@affiliate, @featured_collection], :html => { :multipart => true }) do |f|
    = render :partial => 'shared/featured_collections/form', :locals => { :form => f }
    = f.submit "Update"
    = link_to 'Cancel', [@affiliate, @featured_collection], :class => 'cancel'
