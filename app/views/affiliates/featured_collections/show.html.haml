.show-featured-collection
  = affiliate_center_breadcrumbs([link_to(@affiliate.display_name, affiliate_path(@affiliate)), "Featured Collection"])
  %h1 Featured Collection
  %table
    %colgroup
      %col{ :class => 'name' }
      %col{ :class => 'value' }
    %thead
      %tr
        %th{ :colspan => 2 }
          .actions
            = link_to("Edit", edit_affiliate_featured_collection_path(@affiliate, @featured_collection), { :class => 'edit-link' })
            = button_to("Delete", [@affiliate, @featured_collection], :method => :delete, :confirm => "Are you sure you want to delete this Featured Collection?")
    = render :partial => 'shared/featured_collections/show'
  .add-link-wrapper
    = link_to "Add another Featured Collection", new_affiliate_featured_collection_path(@affiliate), :class => 'add-link'