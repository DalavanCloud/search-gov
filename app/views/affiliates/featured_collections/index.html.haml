.featured-collections
  = affiliate_center_breadcrumbs([link_to(@affiliate.display_name, affiliate_path(@affiliate)), "Featured Collections"])
  %h1 Featured Collections
  .featured-collection-list
    %table
      %colgroup
        %col{ :class => 'title' }
        %col{ :class => 'publish-date' }
        %col{ :class => 'publish-date' }
        %col{ :class => 'status' }
        %col{ :class => 'actions' }
      %thead
        %tr
          %th{ :colspan => 5 }
            = link_to "Add new featured collection", new_affiliate_featured_collection_path(@affiliate), :class => 'add-link'
            - unless @featured_collections.blank?
              %span= page_entries_info @featured_collections, :html => false
      %tbody
        %tr.column-header
          %th Title
          %th Publish Start
          %th Publish End
          %th Status
          %th Actions
        - unless @featured_collections.blank?
          - @featured_collections.each do |featured_collection|
            %tr.row-item
              %td= link_to featured_collection.title.truncate(35, :separator => " "), [@affiliate, featured_collection]
              %td.publish-date= render_date featured_collection.publish_start_on
              %td.publish-date= render_date featured_collection.publish_end_on
              %td.status= featured_collection.display_status
              %td.actions
                = link_to("Edit", edit_affiliate_featured_collection_path(@affiliate, featured_collection))
                = button_to("Delete", [@affiliate, featured_collection], :method => :delete, :confirm => "Are you sure you want to delete this Featured Collection?")
        - else
          %tr
            %td.empty{ :colspan => 5 } Site #{@affiliate.display_name} has no Featured Collection
    = will_paginate @featured_collections
