= affiliate_center_breadcrumbs([link_to(@affiliate.display_name, affiliate_path(@affiliate)), "Add a new Best Bets: Graphics"])
%h1 Add a new Best Bets: Graphics
= render_help_link(@help_link)
.add-featured-collection
  = form_for([@affiliate, @featured_collection], :html => { :multipart => true }) do |f|
    = render :partial => 'shared/featured_collections/form', :locals => { :form => f }
    = f.submit "Add"
    = link_to 'Cancel', affiliate_featured_collections_path(@affiliate), :class => 'cancel'

