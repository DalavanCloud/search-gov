.boosted-sites.span-24
  = affiliate_center_breadcrumbs([link_to(@affiliate.display_name, affiliate_path(@affiliate)), "Edit Boosted Content Entry"])
  %h1 Edit Boosted Content Entry
.edit-boosted-content
  = form_for([@affiliate, @boosted_content]) do |f|
    = render :partial => f
    = f.submit "Update"
    = link_to "Cancel", affiliate_boosted_contents_path(@affiliate), :class => 'cancel'
