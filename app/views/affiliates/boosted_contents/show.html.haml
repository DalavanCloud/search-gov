.show-boosted-content
  = affiliate_center_breadcrumbs([link_to(@affiliate.display_name, affiliate_path(@affiliate)), "Best Bets: Text"])
  %h1 Best Bets: Text
  %table
    %colgroup
      %col{ :class => 'name' }
      %col{ :class => 'value' }
    %thead
      %tr
        %th{ :colspan => 2 }
          .actions
            = link_to("Edit", edit_affiliate_boosted_content_path(@affiliate, @boosted_content), { :class => 'edit-link' })
            = button_to("Delete", [@affiliate, @boosted_content], :method => :delete, :confirm => "Are you sure you want to delete this Boosted Content?")
    = render :partial => 'shared/boosted_contents/show'
  .add-link-wrapper
    = link_to "Add another Best Bets: Text", new_affiliate_boosted_content_path(@affiliate), :class => 'add-link'

