= form.error_messages(:header_message => nil, :class => "error")
.basic-information
  %ul
    %li
      = form.label :name, "Name*"
      = form.text_field :name, { :class => 'text', :maxlength => 255, :size => nil }

.url-section
  %table.rss-url-list
    %colgroup
      %col{ :class => 'url' }
      - unless form.object.is_managed?
        %col.remove
    %tbody
      %tr.column-header
        %th.url URL*
        - unless form.object.is_managed?
          %th= link_to('+', new_url_fields_affiliate_rss_feeds_path(@affiliate), :remote => true, :id => 'add_rss_feed_url', :class => 'add-icon', :title => 'Add RSS feed URL')
      - form.object.rss_feed_urls.build
      - form.object.rss_feed_urls.each_with_index do |rss_feed_url, index|
        = form.fields_for :rss_feed_urls, rss_feed_url do |url_form|
          = render 'url_fields', :f => url_form, :is_managed => form.object.is_managed?, :index => index
- if form.object.is_managed?
  %p.tips
    = link_to "+ Why are the URL fields disabled?", "#why", :id => "why", :class => "sliding_trigger"
    %div#why_content.sliding_content
      %p.tips
        This is a system managed RSS Feed that was autogenerated when you filled out your YouTube handle.
        %br/
        To modify these URLs, please edit your YouTube handle on the
        = link_to 'Social Media', edit_social_media_affiliate_path(@affiliate)
        page.
