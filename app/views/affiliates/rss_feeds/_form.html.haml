= form.error_messages(:header_message => nil, :class => "error")
.basic-information
  %ul
    %li
      = form.label :name, "Name*"
      = form.text_field :name, { :class => 'text', :maxlength => 255, :size => nil }
    %li
      = form.label :url, "URL*"
      = form.text_field :url, { :class => 'text', :maxlength => 255, :size => nil }.merge(form.object.is_managed? ? { :disabled => 'disabled' } : {})
    - if form.object.is_managed?
      %p.tips
        = link_to "+ Why is this URL field disabled?", "#why", :id => "why", :class => "sliding_trigger"
        %div#why_content.sliding_content
          %p.tips
            This is a system managed RSS Feed that was autogenerated when you filled out your YouTube handle.
            %br/
            To modify this URL, please edit your YouTube handle on the
            = link_to 'Social Media', edit_social_media_affiliate_path(@affiliate)
            page.

