= form.error_messages(:header_message => nil, :class => "error")
.basic-information
  %ul
    %li
      = form.label :url, "URL*"
      = form.text_field :url, { :class => 'text', :maxlength => 255, :size => nil }
    %li
      = form.label :name, "Name*"
      = form.text_field :name, { :class => 'text', :maxlength => 255, :size => nil }
    %li
      = form.label :is_active, "Is Active?"
      = form.check_box :is_active
