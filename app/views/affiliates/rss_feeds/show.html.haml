.show-rss-feed
  = affiliate_center_breadcrumbs([link_to(@affiliate.display_name, affiliate_path(@affiliate)), "RSS Feed"])
  %h1 RSS Feed
  %table
    %colgroup
      %col{ :class => 'name' }
      %col{ :class => 'value' }
    %thead
      %tr
        %th{ :colspan => 2 }
          .actions
            = link_to("Edit", edit_affiliate_rss_feed_path(@affiliate, @rss_feed), { :class => 'edit-link' })
            = button_to("Delete", [@affiliate, @rss_feed], :method => :delete, :confirm => "Are you sure you want to delete this RSS Feed?")
    %tbody
      %tr
        %td.name URL
        %td= @rss_feed.url
      %tr
        %td.name Name
        %td= @rss_feed.name
      %tr
        %td.name Is Active?
        %td= @rss_feed.is_active ? "Active" : "Inactive"
      %tr
        %td.name Last Crawled At
        %td= @rss_feed.last_crawled_at
      %tr
        %td.name Last Crawl Status
        %td= @rss_feed.last_crawl_status 

  .add-link-wrapper
    = link_to "Add another RSS Feed", new_affiliate_rss_feed_path(@affiliate), :class => 'add-link'