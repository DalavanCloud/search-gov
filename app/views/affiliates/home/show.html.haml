.affiliate
  = affiliate_center_breadcrumbs(h(@affiliate.display_name))
  %h1= "Site: #{h(@affiliate.display_name)}"
  %table.generic-table
    %thead
      %tr
        %th.secondary-header
          Website URL
        %th.secondary-header
          Actions
    %tbody
      %tr
        %td.site-url
          = h(@affiliate.website)
        %td
          = render :partial => 'affiliate_actions', :locals => {:affiliate => @affiliate}
