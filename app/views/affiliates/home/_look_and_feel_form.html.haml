%h2 Customize your look and feel
%ul
  %li
    = look_and_feel_form.label :staged_search_results_page_title, "Search results page title"
    = look_and_feel_form.text_field :staged_search_results_page_title, :class => "txt"
  %li
    = look_and_feel_form.label :staged_favicon_url, "Favicon URL"
    = look_and_feel_form.text_field :staged_favicon_url, :class => "txt", :maxlength => 255

%ul.look-and-feel-form.one-serp
  %li.css-overrides
    %div
      = label_tag 'affiliate[staged_css_property_hash][font_family]', 'Font family'
      = select_tag 'affiliate[staged_css_property_hash][font_family]', options_for_select(Affiliate::FONT_FAMILIES, render_affiliate_css_property_value(@affiliate.staged_css_property_hash, :font_family))
  %li.css-overrides
    %div
      = render_staged_check_box_tag @affiliate, :show_content_border
      = label_tag 'affiliate[staged_css_property_hash][show_content_border]', 'Add top padding'
    %div
      = render_staged_check_box_tag @affiliate, :show_content_box_shadow
      = label_tag 'affiliate[staged_css_property_hash][show_content_box_shadow]', 'Add drop shadow'
  %li.use-colors-from-theme
    %span Use colors from a theme
    = render_site_themes @affiliate
  %li
    %div
      = look_and_feel_form.label :staged_page_background_image, "Page background image"
      - if look_and_feel_form.object.staged_page_background_image.present?
        .page-background-image
          = image_tag(look_and_feel_form.object.staged_page_background_image.url(:large))
          = look_and_feel_form.check_box :mark_staged_page_background_image_for_deletion, { :class => 'checkbox mark-image-for-deletion' }
          = look_and_feel_form.label :mark_staged_page_background_image_for_deletion, 'Mark page background image for deletion'
      .page-background-image-file-field-wrapper
        = look_and_feel_form.file_field :staged_page_background_image, { :class => 'file' }
      %span GIF, JPG or PNG with maximum size of #{Affiliate::MAXIMUM_IMAGE_SIZE_IN_KB} KB
  %li.css-overrides
    %div
      = label_tag 'affiliate[staged_css_property_hash][page_background_image_repeat]', 'Page background image repeat'
      = select_tag 'affiliate[staged_css_property_hash][page_background_image_repeat]', options_for_select(Affiliate::BACKGROUND_REPEAT_VALUES, render_affiliate_css_property_value(@affiliate.staged_css_property_hash, :page_background_image_repeat))
  %li.css-overrides
    %div
      = label_tag 'affiliate[staged_css_property_hash][page_background_color]', 'Page background color'
      = render_staged_color_text_field_tag @affiliate, :page_background_color
    %div
      = label_tag 'affiliate[staged_css_property_hash][content_background_color]', 'Content background color'
      = render_staged_color_text_field_tag @affiliate, :content_background_color
  %li.css-overrides
    %div
      = label_tag 'affiliate[staged_css_property_hash][content_border_color]', 'Content border color'
      = render_staged_color_text_field_tag @affiliate, :content_border_color
    %div
      = label_tag 'affiliate[staged_css_property_hash][content_box_shadow_color]', 'Content box shadow color'
      = render_staged_color_text_field_tag @affiliate, :content_box_shadow_color
  %li.css-overrides
    %div
      = label_tag 'affiliate[staged_css_property_hash][search_button_text_color]', 'Search button text color'
      = render_staged_color_text_field_tag @affiliate, :search_button_text_color
    %div
      = label_tag 'affiliate[staged_css_property_hash][search_button_background_color]', 'Search button background color'
      = render_staged_color_text_field_tag @affiliate, :search_button_background_color
  %li.css-overrides
    %div
      = label_tag 'affiliate[staged_css_property_hash][left_tab_text_color]', 'Left tab text color'
      = render_staged_color_text_field_tag @affiliate, :left_tab_text_color
  %li.css-overrides
    %div
      = label_tag 'affiliate[staged_css_property_hash][title_link_color]', 'Title link color'
      = render_staged_color_text_field_tag @affiliate, :title_link_color
    %div
      = label_tag 'affiliate[staged_css_property_hash][visited_title_link_color]', 'Visited title link color'
      = render_staged_color_text_field_tag @affiliate, :visited_title_link_color
  %li.css-overrides
    %div
      = label_tag 'affiliate[staged_css_property_hash][description_text_color]', 'Description text color'
      = render_staged_color_text_field_tag @affiliate, :description_text_color
  %li.css-overrides
    %div
      = label_tag 'affiliate[staged_css_property_hash][url_link_color]', 'URL link color'
      = render_staged_color_text_field_tag @affiliate, :url_link_color
