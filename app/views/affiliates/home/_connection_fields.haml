%tr.row-item.connection
  %td.name.draggable
    = f.label :affiliate_name, "Connection site handle #{index}", :class => 'hide'
    = f.text_field :affiliate_name
    = f.text_field :position, { :class => 'position hide' }
  %td.name
    = f.label :label, "Connection label #{index}", :class => 'hide'
    = f.text_field :label, :maxlength => 50
  %td.remove
    = f.label :_destroy, "Mark connection for deletion #{index}", :class => 'hide'
    = f.text_field :_destroy, { :value => '0', :class => 'destroy-connection hide' }
    = link_to('-', "#", :class => 'remove-connection remove-icon')
