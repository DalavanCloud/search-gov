= breadcrumbs([link_to("Affiliate Program", affiliates_path), "Affiliate Center"])
%h1 Affiliate Dashboard  
- if @current_user.is_affiliate?
  .span-18  
    -if @current_user.affiliates.empty?
      %p You currently have no affiliates.  To begin, please add a new affiliate.
    -else
      %p Welcome to the affiliate section.  To begin, select an affiliate from the left menu.
      .title-row
        .right
          #{link_to "+ add new affiliate", new_affiliate_path, :class => "small"}
        Affiliate List
      %table.admin-table
        %tr
          %th 
            Name
          %th 
            Manage
        - @current_user.affiliates.each do |affiliate|
          %tr{:class => cycle('even', 'odd')}
            %td
              = link_to(affiliate.name, affiliate_path(affiliate))
            %td
              = link_to "Edit", edit_affiliate_path(affiliate)
              |
              = link_to "View current", search_url(:affiliate=> affiliate.name, :query=>"gov"), :target => "_blank"
              - if affiliate.has_staged_content?
                |
                = link_to "View staged", search_url(:affiliate=> affiliate.name, :query=>"gov", :staged => 1)
                |
                = button_to "Push Changes", push_content_for_affiliate_path(affiliate, :affiliate_id => affiliate.id)
              |
              = button_to "Delete Affiliate", affiliate_path(affiliate), :title => "Delete this affiliate", :confirm => "You are about to delete this affiliate. Are you sure?", :method => :delete
