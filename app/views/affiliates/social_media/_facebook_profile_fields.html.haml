= fields_for :social_media_profile, profile do |facebook_profile_form|
  = hidden_field_tag :profile_type, profile.class.name
  = facebook_profile_form.label :username, "Facebook username"
  %br
  = facebook_profile_form.text_field :username, :maxlength => 255, :size => nil, :class => 'txt'
%br
= submit_tag "Save", :id => "save"