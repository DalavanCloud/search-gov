= fields_for :social_media_profile, profile do |twitter_profile_form|
  = hidden_field_tag :profile_type, profile.class.name
  = twitter_profile_form.label :screen_name, "Twitter screen name"
  %br
  = twitter_profile_form.text_field :screen_name, :maxlength => 255, :size => nil, :class => 'txt'
%br
= submit_tag "Save", :id => "save"