= fields_for :social_media_profile, profile do |flickr_profile_form|
  = hidden_field_tag :profile_type, profile.class.name
  = flickr_profile_form.label :url, "Flickr url"
  %br
  = flickr_profile_form.text_field :url, :maxlength => 255, :size => nil, :class => 'txt'
%br
= submit_tag "Save", :id => "save"