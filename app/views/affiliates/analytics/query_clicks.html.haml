= affiliate_center_breadcrumbs([ link_to(@affiliate.display_name, affiliate_path(@affiliate)), 'Query Clicks'] )

%h1&= "Top Clicks on '#{@query}' for #{@affiliate.display_name} from #{@start_date} to #{@end_date}"
= render_help_link(@help_link)

%br
- if @top_urls.empty?
  %p
    No data is available for this date range
- else
  .clear.span-12
    %table.kv_pairs
      %tr
        %th{:style=>"text-align:center"} URL
        %th{:style=>"text-align:right"} Total
      - @top_urls.each_with_index do |(key, value), idx|
        %tr
          %td
            = "#{idx+1}."
            = link_to truncate(key, :length => 90), key
            = affiliate_click_queries_link(key, @affiliate, @start_date, @end_date)
          %td{:style => "text-align: right"}= value
