#logoHome.group
  = link_to image_tag("/m/i/logo_mobile.png"), root_path(:locale => I18n.locale.to_s, :m => true)

.groupCentered
  %h1.center
    Contact Your Government
  .alerttext.center
    = flash[:notice] if flash[:notice]
  
  - unless @thank_you
    - form_tag contact_form_path, :method => :post do
      = hidden_field_tag "locale", I18n.locale.to_s
      = hidden_field_tag "m", "true"
      %pad10 &nbsp;
      %div
        %span.alerttext *
        = label_tag "email", "Email"
      .center
        = text_field_tag "email", @email || "", :class => "textbox1"
      %pad10 &nbsp;
      %div
        %span.alerttext *
        = label_tag "message", "Message"
      .center
        = text_field_tag "message", @message || "", :class => "textbox1"
      .center 
        &nbsp;
      %div= submit_tag "Submit", :class => "submit1"
