#logo.group
  = link_to image_tag("/m/i/logo.gif"), root_path(:locale => I18n.locale.to_s, :m => true)

%h2.center Contact Your Government

.group
  .row
    E-mail Us
  .row
    = flash[:notice] if flash[:notice]
  - unless @thank_you
    - form_tag contact_form_path, :method => :post do
      = hidden_field_tag "locale", I18n.locale.to_s
      = hidden_field_tag "m", "true"
      .row= label_tag "email", "Email *"
      .row= text_field_tag "email", @email || ""
      .row= label_tag "message", "Message *"
      .row= text_field_tag "message", @message || ""
      .row= submit_tag "Submit"