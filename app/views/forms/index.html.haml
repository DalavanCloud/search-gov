.prepend-6.span-15.append-3.homepage
  %a{:name => "content"}
  = link_to(image_tag("USAsearch_large_#{I18n.locale}_forms.gif" , :alt => "USASearch Forms Home"), forms_path(:locale => I18n.locale))
  = render "shared/search", :path => forms_search_path

.prepend-2.span-16.append-3{:style => "text-align: center;"}
  %div{:style => 'margin-top: 5px; color: black; font-family: Arial; font-weight: bold;'}
    = t :forms_home_page_message
  = image_tag('dotline.gif', :alt => 'dotted line')

- if @top_forms.size > 0
  .prepend-2.span-20.append-2
    #popular_forms
      %h2 Popular Forms
      - @top_forms.each_with_index do |top_forms_column, column_index|
        - unless top_forms_column.nil?
          .prepend-1.span-6.append-1.top-forms-column{:id => "top-forms-column-#{column_index + 1}"}
            - if top_forms_column.first
              %h3= top_forms_column.first.name
              %ul
                - top_forms_column[1..-1].each do |top_form|
                  %li
                    = link_to top_form.name, top_form.url
